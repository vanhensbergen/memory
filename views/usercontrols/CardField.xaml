<UserControl x:Class="memory.views.usercontrols.CardField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:memory.views.usercontrols"
             mc:Ignorable="d" 
             x:Name="cardfield"
             d:DesignHeight="800" d:DesignWidth="500">
    <Button x:Name="button" 
            Command="{Binding ElementName=cardfield,Path=Command}"
            CommandParameter="{Binding ElementName=cardfield, Path=CommandParameter}">
        <Canvas x:Name="canvas"
                Width="{Binding ElementName=button, Path=ActualWidth}"
                Height="{Binding ElementName=button, Path=ActualHeight}">
            
        </Canvas>
    </Button>
</UserControl>
